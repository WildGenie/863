        Title="开发者配置工具" Height="400" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnConfig" Content="参数配置工具" Click="btnConfig_Click"/>
            <Button x:Name="btnDBDesc" Content="参数配置工具" Click="btnDBDesc_Click"/>
        </StackPanel>
        <Grid x:Name="grdContent" Grid.Row="1"/>
    </Grid>
</Window>
